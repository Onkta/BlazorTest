@page "/Servers"



<h3>Servers</h3>

<div class="card container-fluid text-center">
    <div class="card-header"></div>
        <div class="card-body m-3 row w-50 align-middle" style="width:100%">
            @foreach (var city in cities)
            {
                <div class="col w-25">
                    <div class="card m-3">
                        <div class="card-header">
                            @city
                        </div>
                        <div class="card-body">
                            <img class="card-img-top" src="@("/images/" + city + ".png")" style="width:100%;height:100%"/>
                        </div>
                        <div class="card-footer">
                            <button class="btn-sm btn-primary">Show Server</button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div>
            <table class="table table-borderless table-striped ">
                <thead>
                    <tr>
                        <th>Sever</th>
                        <th>City</th>
                        <th>Status</th>
                        <th>LastCheck</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var server in servers)
                    {
                        <tr>
                            <td>@server.Name</td>
                            <td>@server.City</td>
                            <td style="color:@(server.IsOnline ? "green" : "red")">@(server.IsOnline ? "Online" : "Offline")</td>
                            <td>@DateTime.Now</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    <div class="card-footer"></div>
</div>


@code {
    private List<Server> servers = ServerRepository.GetServers();
    private List<string> cities = CitiesRepository.GetCities();
}
